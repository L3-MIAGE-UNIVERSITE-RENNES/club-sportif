<h1>Mails envoy√©s</h1>
<a href="{{ path('app_send_mail_contact') }}" class="btn btn-primary">Nouveau mail</a>
<table border="1">

    <thead>
    <tr>
        <th>Date d'envoie</th>
        <th>Objet</th>
        <th>Destinataires</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for mail in mails %}
        <tr>
            <td>{{ mail.dateEnvoi | date('d/m/Y') }}</td>
            <td>{{ mail.objet }}</td>
            <td>
                {% for destinataire in mail.destinataires %}
                    {{ destinataire.email }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
            <td><a href="{{ path('app_view_mail_contact', {'id': mail.id}) }}" class="btn btn-primary">Voir</a></td>
            <td><a href="{{ path('app_delete_mail_contact', {'id': mail.id}) }}" class="btn btn-danger">Supprimer</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>